@model Contact

<div class="row">
	<div class="col-12">
		<div class="card border-top border-0 border-4 border-dark">
			<div class="card-body p-5">
				<div class="card-title text-center">
					<i class="bx bxs-user-circle text-dark font-50"></i>
					<h5 class="mb-5 mt-2 text-dark">İletişim Ekle</h5>
				</div>
				<hr>
				<form class="row g-3" method="post">
					<div class="col-12">
						<label asp-for="Title" class="form-label">Başlık</label>
						<div class="input-group input-group-lg">
							<input type="text" class="form-control border-start-0" asp-for="Title" placeholder="Başlığı">
							<span class="text-danger" asp-validation-for="Title"></span>
						</div>
					</div>
					<div class="col-12">
						<label asp-for="Description" class="form-label">Açıklama</label>
						<div class="input-group input-group-lg">
							<input type="text" class="form-control border-start-0" asp-for="Description" placeholder="Açıklaması">
							<span class="text-danger" asp-validation-for="Description"></span>
						</div>
					</div>
					<div class="col-12">
						<label asp-for="ImageUrl" class="form-label">Resim</label>
						<div class="input-group input-group-lg">
							<input type="text" class="form-control border-start-0" asp-for="ImageUrl" placeholder="Resim">
							<span class="text-danger" asp-validation-for="ImageUrl"></span>
						</div>
					</div>
					<div class="col-12">
						<label asp-for="InstagramRedirectUrl" class="form-label">Instagram Linki:</label>
						<div class="input-group input-group-lg">
							<input type="text" class="form-control border-start-0" asp-for="InstagramRedirectUrl" placeholder="Instagram Linki">
							<span class="text-danger" asp-validation-for="InstagramRedirectUrl"></span>
						</div>
					</div>

					<div class="col-12">
						<label asp-for="XRedirectUrl" class="form-label">Twitter Linki:</label>
						<div class="input-group input-group-lg">
							<input type="text" class="form-control border-start-0" asp-for="XRedirectUrl" placeholder="Twitter Linki">
							<span class="text-danger" asp-validation-for="XRedirectUrl"></span>
						</div>
					</div>

					<div class="col-12">
						<label asp-for="LinkedinRedirectUrl" class="form-label">LinkedIn Linki:</label>
						<div class="input-group input-group-lg">
							<input type="text" class="form-control border-start-0" asp-for="LinkedinRedirectUrl" placeholder="LinkedIn Linki">
							<span class="text-danger" asp-validation-for="LinkedinRedirectUrl"></span>
						</div>
					</div>

					<div class="col-12">
						<div class="d-grid">
							<button type="submit" class="btn btn-dark btn-lg px-5"><i class="bx bxs-lock-open"></i>Kaydet</button>
						</div>
					</div>
					<hr>
				</form>
			</div>
		</div>
	</div>
</div>

