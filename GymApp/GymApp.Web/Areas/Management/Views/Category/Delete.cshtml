@model Category
<h1>Kategori Silme</h1>
<p>@Model.Title</p>
<p>@Model.Description</p>
<p>@Model.ImageUrl</p>
<p>@Model.CreatedDate</p>
<p>@Model.UpdatedDate</p>

<h1>Silmek istediğinize emin misiniz?</h1>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Sil" class="btn btn-danger" />
</form>

