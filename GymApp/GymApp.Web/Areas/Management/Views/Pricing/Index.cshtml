@model IEnumerable<Pricing>
	
	<a class="btn btn-success" 
	asp-area="Management" 
	asp-controller="Pricing" 
	asp-action="Create">Ekle</a>
<div class="card radius-15">
	<div class="card-body">
		<div class="card-title">
			<h4 class="mb-0">Ücretlendirme</h4>
		</div>
		<hr>
		<div class="table-responsive">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th scope="col">Başlık</th>
						<th scope="col">Açıklama</th>
						<th scope="col">Ücret</th>
						<th scope="col">Başlama Tarihi</th>
						<th scope="col">Bitiş Tarihi</th>
						<th scope="col">Aylık Süre</th>
						<th scope="col">İndirimi</th>
						<th scope="col">Durumu</th>
						<th scope="col">#</th>

					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Title</td>
							<td>@item.Description</td>
							<td>@item.Price</td>
							<td>@item.StartTime</td>
							<td>@item.StopTime</td>
							<td>@item.MonthCount</td>
							<td>@item.DiscountRate</td>
							<td>
								@if (@item.Status)
								{
									<span>Aktif</span>
								}
								else
								{
									<span>Pasif</span>
								}
								</td>
							<td>
								<a class="btn btn-primary"
								   asp-area="Management"
								   asp-controller="Pricing"
								   asp-action="Details"
								   asp-route-id="@item.Id">Detay</a>
								<a class="btn btn-primary" 
								asp-area="Management" 
								asp-controller="Pricing" 
								asp-action="Edit" 
								asp-route-id="@item.Id">Düzenle</a>
								<a class="btn btn-danger" 
								asp-area="Management" 
								asp-controller="Pricing" 
								asp-action="Delete" 
								asp-route-id="@item.Id">Sil</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>