@model Pricing

<div class="row">
    <div class="col-12">
		<div class="card border-top border-0 border-4 border-dark">
			<div class="card-body p-5">
				<div class="card-title text-center">
					<i class="bx bxs-user-circle text-dark font-50"></i>
					<h5 class="mb-5 mt-2 text-dark">Ücretlndirme Ekle</h5>
				</div>
				<hr>
				<form class="row g-3" method ="post">
					<div class="col-12">
						<label asp-for="Title" class="form-label">Başlık</label>
						<div class="input-group input-group-lg">
							<input type="text" class="form-control border-start-0" asp-for="Title" placeholder="Başlık">
							<span class="text-danger" asp-validation-for="Title"></span>
						</div>
					</div>
					<div class="col-12">
						<label asp-for="Description" class="form-label">Açıklama</label>
						<div class="input-group input-group-lg">
							<input type="text" class="form-control border-start-0" asp-for="Description" placeholder="Açıklama">
							<span class="text-danger" asp-validation-for="Description"></span>
						</div>
					</div>
					<div class="col-12">
						<label asp-for="Price" class="form-label">Ücret</label>
						<div class="input-group input-group-lg">
							<input type="text" class="form-control border-start-0" asp-for="Price" placeholder="Telefonu">
							<span class="text-danger" asp-validation-for="Price"></span>
						</div>
					</div>
					<div class="col-12">
						<label asp-for="StartTime" class="form-label">Başlama Zamanı</label>
						<div class="input-group input-group-lg">
							<input type="text" class="form-control border-start-0" asp-for="StartTime" placeholder="Başlama Zamanı">
							<span class="text-danger" asp-validation-for="StartTime"></span>
						</div>
					</div>
					<div class="col-12">
						<label asp-for="StopTime" class="form-label">Bitiş Zamanı</label>
						<div class="input-group input-group-lg">
							<input type="text" class="form-control border-start-0" asp-for="StopTime" placeholder="Bitiş Zamanı">
							<span class="text-danger" asp-validation-for="StopTime"></span>
						</div>
					</div>
					<div class="col-12">
						<label asp-for="MonthCount" class="form-label">Ay Süresi</label>
						<div class="input-group input-group-lg">
							<input type="text" class="form-control border-start-0" asp-for="MonthCount" placeholder="Ay Süresi">
							<span class="text-danger" asp-validation-for="MonthCount"></span>
						</div>
					</div>
					<div class="col-12">
						<label asp-for="DiscountRate" class="form-label">İndrim</label>
						<div class="input-group input-group-lg">
							<input type="text" class="form-control border-start-0" asp-for="DiscountRate" placeholder="İndirim">
							<span class="text-danger" asp-validation-for="DiscountRate"></span>
						</div>
					</div>
					
					<div class="col-12">
						<div class="d-grid">
							<button type="submit" class="btn btn-dark btn-lg px-5"><i class="bx bxs-lock-open"></i>Kaydet</button>
						</div>
					</div>
					<hr>
				</form>
			</div>
		</div>
    </div>
</div>